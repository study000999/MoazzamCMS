       <div>
        <div class="row text-center">
            <h2>Update Profile</h2>
        </div>
           </div>


        <form action="~/Home/edit_teacher_password" name="myform" method="post" >   
        
           <div>
            <label for="section" class="col-md-2">
               Teacher ID:
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" id="id" name="id" placeholder="Enter Teacher ID">
                
            </div>
             <div class="col-md-1">
                <i class="fa fa-lock fa-2x"></i>
            </div>
        </div>

            
     
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <button type="submit" class="btn btn-info" onclick="return myfunction()">
                    Edit Password
                 
                </button> 
               <font color="red"> <i> <p id="error" align="center"> </p> </i> </font> 
        </div>
            </div>


        </form>        
   
        
   

    
        
<table class="dataTable" >

    <thead>
       <th></th>
          <th>First Name</th>

        <th> Last Name</th>

        <th> Teacher ID</th>

        <th>Password</th>
        

        </thead>
    

    <tbody>
       


@foreach (var s in Model)
    {
        <tr>
            <td> </td>
            <td>&nbsp;&nbsp;@s.fname</td>
            <td>@s.lname</td>
            <td>@s.teacher_id</td>
            <td>@s.password</td>
         
           
            <td>
             
             <a href="~/Home/edit_teacher_password_table/@s.teacher_id"> <button class="/table/button action">  Edit </button> </a>

            </td>

            


            
        </tr>
    }
  </tbody>

    </table>
  
       


       </div>  
    
        

   
    

