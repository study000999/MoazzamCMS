       <div>
        <div class="row text-center">
            <h2>New Registration</h2>
        </div>
           </div>


        <form action="/Home/Add_Student"  method="post" >   
        <div>
             





                  <label for="firstname" class="col-md-2">
                First Name:
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" id="firstname" name="fname" placeholder="Enter First Name" required>
            </div>
            <div class="col-md-1">
                <i class="fa fa-lock fa-2x"></i>
            </div>
        </div>        
        <div>
            <label for="lastname" class="col-md-2" >
                Last Name:
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" id="lastname" name="lname" placeholder="Enter Last Name" required>
            </div>
             <div class="col-md-1">
                <i class="fa fa-lock fa-2x"></i>
            </div>
        </div>
        <div>
            <label for="emailaddress" class="col-md-2">
                Email address:
            </label>
            <div class="col-md-9">
                <input type="email" class="form-control" id="emailaddress" name="email" placeholder="Enter email address" required>
                <p class="help-block">
                    Example: yourname@domain.com
                </p>
            </div>
             <div class="col-md-1">
                <i class="fa fa-lock fa-2x"></i>
            </div>
        </div>
        <div>
            <label for="password" class="col-md-2">
                Password:
            </label>
            <div class="col-md-9">
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required>
                
            </div>
             <div class="col-md-1">
                <i class="fa fa-lock fa-2x"></i>
            </div>
        </div>
            <div>
            <label for="address" class="col-md-2">
                Address:
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" id=add" name="add" placeholder="Enter Address" required>
                
            </div>
             <div class="col-md-1">
                <i class="fa fa-lock fa-2x"></i>
            </div>
        </div>
           <div>
            <label for="section" class="col-md-2">
                Section:
            </label>
            <div class="col-md-9">
                <select name="section" class="form-control">
                    <option>E-01</option>
                     <option>E-02</option>
                     <option>E-03</option>
                     <option>E-04</option>
                     <option>E-05</option>
                     <option>E-06</option>
                     <option>E-07</option>
                     <option>E-08</option>
                     <option>E-09</option>
                     <option>E-10</option>
                     <option>E-11</option>
                     <option>E-12</option>
                     <option>E-13</option>
                     <option>E-14</option>
                     <option>E-15</option>
                     <option>E-16</option>
                     <option>E-17</option>
                     <option>E-18</option>
                     <option>E-19</option>
                     <option>E-20</option>
                    


                </select>
                
            </div>
             <div class="col-md-1">
                <i class="fa fa-lock fa-2x"></i>
            </div>
        </div>

           


            <div>
            <label for="degree" class="col-md-2">
                Degree:
            </label>
            <div class="col-md-9">
                <select name="degree" id="degree"  class="form-control" required >
                    
                    <option> Fsc Pre Engg</option>
                    <option>Fsc Pre Medical</option>
                    <option>ICS</option>
                    <option>I.Com</option>
                    <option>B.Com</option>
                </select>
            </div>            
        </div>



        <div>
            <label for="sex" class="col-md-2">
                Gender:
            </label>
            <div class="col-md-10">
                <label class="radio">
                    <input type="radio" name="sex" id="sex" value="male" checked required>
                    Male
                </label>
                <label class="radio">
                    <input type="radio" name="sex" id="Radio1" value="female" required>
                    Female
                </label>
            </div>             
        </div>
        <div>
            <label for="country" class="col-md-2">
                Country:
            </label>
            <div class="col-md-9">
                <select name="city" id="city"  class="form-control" placeholder="Select Country"required>
                    
                    <option>India</option>
                    <option>United States</option>
                    <option>Canada</option>
                    <option>United Kingdom</option>
                    <option>Others</option>
                </select>
            </div>            
        </div>
        <div>
            <label for="uploadimage" class="col-md-2">
                Upload Image:
            </label>
            <div class="col-md-10">
                <input type="file" name="uploadimage" id="uploadimage">
                <p class="help-block">
                    Allowed formats: jpeg, jpg, gif, png
                </p>
            </div>  
            
            
              
                            
        </div>
        <div>
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <label>
                    <input type="checkbox">I hereby accept the terms and conditions for using this site</label>
            </div>            




        
            
          
        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <button type="submit" class="btn btn-info">
                    Register
                </button> 
        </div>
             </form>   
