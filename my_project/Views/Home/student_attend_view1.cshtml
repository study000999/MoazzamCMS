                </ul>
            </div>
        </nav>
	


        <div>
        <div class="row text-center">
           
        </div>
           </div>
        <div>
            <label for="section" class="col-md-2">
              Registeration Number:
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="reg" id="reg" value="@ViewBag.reg" readonly/>
                    
                   
                    
                
                
            </div>
             <div class="col-md-1">
                <i class="fa fa-lock fa-2x"></i>
            </div>
        </div>
        <table class="responstable">
            <tr>
                <th>Date</th>
                <th>Attendance</th>
            </tr>
        @{
            
            for(int i=0;i<@ViewBag.attend.Count;i=i+2)
            {
                <tr>
                <td>@ViewBag.attend[i+1]</td>
                   
                    <td>@ViewBag.attend[i]</td>
                   
            
                    
            </tr>
            }
        }

        </table>
        </div>
    </body>
</html>