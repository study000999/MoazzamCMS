        <form action="~/Home/Download" method="post"> 



        <div>
            <label for="sec" class="col-md-2">
                Section:
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" id="sec" name="sec" value=@TempData.Peek("Sec_sec") readonly>
                
            </div>
             <div class="col-md-1">
                <i class="fa fa-lock fa-2x"></i>
            </div>
        </div>
        <br /> <br /> 


        <div>
            <label for="sub" class="col-md-2">
                Subject
            </label>
            <div class="col-md-9">
                <input type="text" class="form-control" id="sub" name="sub" value=@TempData.Peek("Sec_sub") readonly>
                
            </div>
             <div class="col-md-1">
                <i class="fa fa-lock fa-2x"></i>
            </div>
        </div>



            <br />
        <br />





    <table class="responstable" >

    
        <tr>
       <td>Student Id</td>
       @{
           for(int i=0;i<ViewBag.date.Count;i++)
           {
               <td> @ViewBag.date[i]</td>
           
       }  
        
       }

       </tr> 
    

   



             
                 @{
            int c=ViewBag.count;
            
            for (int i = 0; i <ViewBag.attend.Count;i=i+c+1)
            {
               <tr>
              
               @for (int j = i; j < i+c+1; j++)
               {
                   <td>@ViewBag.attend[j] </td>
               }
                </tr>
               
                   
            }
        }    
   


